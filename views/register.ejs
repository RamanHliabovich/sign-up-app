<%- include ('partials/header'); -%>

<div class="ui main text container segment">
    <div class="ui hude header">Register</div>
    <form action="/register" class="ui large form" method="POST">
        <div class="ui stacked element">
            <div class="two fields">
                <div class="field">
                    <input id="capitalizeInput" type="text" name="firstname" placeholder="First Name" required>
                </div>
                <div class="field">
                    <input id="capitalizeInput" type="text" name="lastname" placeholder="Last Name" required>                    
                </div>
            </div>
        </div>
        <div class="field">
            <div class="ui left icon input">
                <i class="user icon"></i>
                <input autofocus type="username" name="username" placeholder="Username" required>
            </div>
        </div>
        <div class="field">
            <div class="ui left icon input">
                <i class="envelope icon"></i>
                <input autofocus type="email" name="email" placeholder="E-mail address" required>
            </div>
        </div>
        <div class="field">
            <div class="ui left icon input">
                <i class="lock icon"></i>
                <input type="password" name="password" placeholder="Password" required>
            </div>
        </div>
        <div class="two fields">
            <button type="submit" class="ui left floated fluid large teal button">Register</button>
        </div>
        <div class="ui divider"></div>
        <a href="/" class="text muted weight-800">Already have an account? Log in</a>
    </form>
</div>

<%- include ('partials/footer'); -%>